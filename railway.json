{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["python"],
      "phases": {
        "install": {
          "cmds": ["pip install -r requirements.txt"]
        },
        "start": {
          "cmd": "python main.py"
        }
      }
    }
  },
  "deploy": {
    "startCommand": "python main.py",
    "restartPolicy": "ON_FAILURE"
  }
}