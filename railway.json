{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["python"],
      "pythonVersion": "3.9",
      "phases": {
        "setup": {
          "cmds": ["apt-get update && apt-get install -y python3-pip"]
        },
        "install": {
          "cmds": ["pip3 install -r requirements.txt"]
        },
        "start": {
          "cmd": "python3 main.py"
        }
      }
    }
  },
  "deploy": {
    "startCommand": "python3 main.py",
    "restartPolicy": "ON_FAILURE"
  }
}